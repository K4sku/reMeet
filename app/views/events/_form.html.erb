<%= form_with(model: event, class: "contents") do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :title, class: "rounded-lg py-3 px-5 bg-gray-100 text-gray-700 inline-block w-full" %>
  </div>
  <div>
    <%= form.label :description, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_area :description, class: "rounded-lg py-3 px-5 bg-gray-100 text-gray-700 inline-block w-full" %>
  </div>
  <div>
    <%= form.label :status, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.select :status, %w[draft upcoming in_progress finished canceled], class: "rounded-lg py-3 px-5 bg-gray-100 text-gray-700 inline-block w-full" %>
  </div>
  <div>
    <%= form.label :date_from, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.date_field :date_from, class: "rounded-lg py-3 px-5 bg-gray-100 text-gray-700 inline-block w-full" %>
  </div>
  <div>
    <%= form.label :date_to, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.date_field :date_to, class: "rounded-lg py-3 px-5 bg-gray-100 text-gray-700 inline-block w-full" %>
  </div>
  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
